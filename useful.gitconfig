[alias]
	co = checkout
	s = status
	b = branch
	cc = commit
	ca = commit --amend
	ap = add -p
	df = diff
	dfn = diff --name-only
	pr = pull --rebase
	pu = pull
	p = push
	pf = push --force
	pfl = push --force-with-lease
	sur = submodule update --init --recursive
	lo = log --oneline
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an <%ae>%C(reset)%C(bold yellow)%d%C(reset)' --all
	st = stash
	wt = worktree
	dt = !git checkout $(git rev-parse HEAD)
	wip = "!if [ \"$(git show --format=%s --no-patch)\" = \"wip\" ]; then git add -A && git ca -m 'wip'; else git add -A && git cc -m 'wip'; fi"
	cp = "!git add -A && git commit -m \"Changes: $(date +'%Y-%m-%d %H:%M:%S')\""
	yeet = "!f() { git add -A && echo '=== Staged changes ===' && git diff --cached --stat && echo '' && echo '=== Generating commit message... ===' && MSG=$(echo 'Analyze the staged git changes (use git diff --cached) and output ONLY a concise commit message. No explanation, just the message. Don not wrap it in markdown syntax, just the plain text message. Follow conventional commits style if appropriate.' | claude -p --model haiku --allowed-tools 'Bash(git:*)') && echo '' && echo '=== Proposed commit message ===' && echo \"$MSG\" && echo '' && echo 'Press ENTER to commit, Ctrl+C to cancel' && read && git commit -m \"$MSG\"; }; f"


[core]
	editor = vim
	pager = less -F


# Use delta as diff tool instead
[core]
    pager = delta --syntax-theme 1337
[interactive]
    diffFilter = delta --color-only --syntax-theme 1337
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
[merge]
    conflictStyle = zdiff3




[core]
  editor = code --wait
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED



# abort if diff has nocheckin in it
NOCHECKIN=$(git diff -U0 --no-color --staged|rg -w nocheckin)
if [ ! -z "$NOCHECKIN" ]; then
  echo "You've left a nocheckin in one of your files! Aborting commit..."
  echo $NOCHECKIN
  exit 1
fi
